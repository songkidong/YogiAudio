<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

	<mapper namespace="com.project3.yogiaudio.repository.interfaces.CancelRepository">
		
		<!-- 취소내역 등록하기 -->
		<insert id="InsertCancel">
		  insert into cancel(id,pno,paymentkey,amount)
		  values(#{id},#{pno},#{paymentKey},#{amount})
		</insert>
		
		
		<!-- 환불 후 상태원상복귀하기 -->
		<update id="refundStatus">
			update user set status = 'N'
			where id=#{id}
		</update>
		
		
		
		
		
		
		
		
	
	
	</mapper>